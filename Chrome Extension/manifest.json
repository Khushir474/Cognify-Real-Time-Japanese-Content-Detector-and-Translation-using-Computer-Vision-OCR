{
    "manifest_version": 3,
    "name": "Cognify - Japanese Text Translator",
    "version": "1.0",
    "description": "Real-time Japanese text translation on web pages",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }],
    "background": {
      "service_worker": "background.js"
    }
  }
  